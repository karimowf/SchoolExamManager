@model SchoolLessonManager.Presentation.Models.Exams.ExamViewModel

@{
    ViewData["Title"] = "İmtahan Qeydiyyatı";
}

<style>
    body {
        background: url('https://images.pexels.com/photos/3184639/pexels-photo-3184639.jpeg?auto=compress&cs=tinysrgb&w=1920')
                    no-repeat center center fixed;
        background-size: cover;
    }

    form {
        background: rgba(255,255,255,0.85);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        max-width: 700px;
        margin: 40px auto;
    }

    h2 {
        text-shadow: 1px 1px 3px rgba(0,0,0,0.4);
        color: #222;
        text-align: center;
    }
</style>


<h2 class="mb-4">İmtahan Qeydiyyatı</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="fw-bold">Dərsin Kodu</label>
        <input asp-for="LessonCode" class="form-control" />
        <span asp-validation-for="LessonCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Şagird Nömrəsi</label>
        <input asp-for="StudentNumber" class="form-control" />
        <span asp-validation-for="StudentNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="fw-bold">İmtahan Tarixi</label>
        <input asp-for="ExamDate" type="date" class="form-control" />
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Qiymət</label>
        <input asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Yadda Saxla</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
