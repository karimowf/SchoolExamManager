@model SchoolLessonManager.Presentation.Models.Students.StudentViewModel

<h2>Şagird Qeydiyyatı</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Şagird Nömrəsi</label>
        <input asp-for="Number" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Adı</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Soyadı</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Sinifi</label>
        <input asp-for="GradeLevel" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Yadda saxla və Növbəti</button>
</form>
