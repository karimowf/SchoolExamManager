@model SchoolLessonManager.Presentation.Models.Lessons.LessonViewModel

@{
    ViewData["Title"] = "Dərs Qeydiyyatı";
}

<style>
    body {
        background: url('https://images.pexels.com/photos/3184639/pexels-photo-3184639.jpeg?auto=compress&cs=tinysrgb&w=1920')
                    no-repeat center center fixed;
        background-size: cover;
    }

    form {
        background: rgba(255,255,255,0.85);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        max-width: 700px;
        margin: 40px auto;
    }

    h2 {
        text-shadow: 1px 1px 3px rgba(0,0,0,0.4);
        color: #222;
        text-align: center;
    }
</style>


<h2 class="mb-4">Dərs Qeydiyyatı</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label fw-bold">Dərsin Kodu</label>
        <input asp-for="Code" class="form-control" maxlength="3" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Dərsin Adı</label>
        <input asp-for="Name" class="form-control" maxlength="30" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Sinifi</label>
        <input asp-for="GradeLevel" class="form-control" min="1" max="12" />
        <span asp-validation-for="GradeLevel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Müəllimin Adı</label>
        <input asp-for="TeacherFirstName" class="form-control" maxlength="20" />
        <span asp-validation-for="TeacherFirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Müəllimin Soyadı</label>
        <input asp-for="TeacherLastName" class="form-control" maxlength="20" />
        <span asp-validation-for="TeacherLastName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Yadda Saxla və Növbəti</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
